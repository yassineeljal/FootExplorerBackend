{
  "app": { 
    "basePath": "/api/v1" 
  },
  "server": {
    "http": { "enabled": true, "port": 3000 },
    "trustProxy": false
  },
  "db": { 
    "uri": "mongodb://localhost:27017/footexplorer" 
  },
  "security": {
    "jwt": { 
      "secret": "dev-secret-key", 
      "expiresIn": "1d" 
    },
    "cors": { 
      "origins": ["*"] 
    },
    "rateLimit": { 
      "windowMs": 900000, 
      "max": 100 
    }
  }
}
