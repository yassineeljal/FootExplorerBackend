{
  "app": { 
    "basePath": "/api/v1" 
  },
  "server": {
    "http": { "enabled": true, "port": 3000 },
    "trustProxy": false
  },
  "db": { 
    "uri": "mongodb://localhost:27017/football_db" 
  },
  "security": {
    "jwt": { 
      "secret": "your-secret-key-here", 
      "expiresIn": "1d" 
    },
    "cors": { 
      "origins": ["http://localhost:5173", "http://localhost:3000"] 
    },
    "rateLimit": { 
      "windowMs": 900000, 
      "max": 100 
    }
  }
}